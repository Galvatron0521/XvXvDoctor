                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_info_tingzhen_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/end_time"
                    android:drawablePadding="24dp"
                    android:gravity="center"
                    android:text="发布停诊消息"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_info_yijian_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/binghao"
                    android:drawablePadding="24dp"
                    android:gravity="center"
                    android:text="我的意见"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_info_wode_zhanghu_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/xingming"
                    android:drawablePadding="24dp"
                    android:gravity="center"
                    android:text="我的账户"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:gravity="right|center_vertical"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/search_bt_bg"
                android:text="退出登录"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>