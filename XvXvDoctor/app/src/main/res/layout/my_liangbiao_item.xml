<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_liangbiao_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:text="名字 名字 名字"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/my_liangbiao_item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:text="IDIDIDIDI"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/my_liangbiao_item_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:text="bianhao"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <Button
        android:id="@+id/my_liangbiao_item_share"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@color/main_color"
        android:focusable="false"
        android:text="共享"
        android:textColor="@color/white" />
</RelativeLayout>